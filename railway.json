{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
      "builder": "npm",
      "buildCommand": "npm install"
    },
    "deploy": {
      "startCommand": "npm start",
      "healthcheckPath": "/health",
      "healthcheckTimeout": 5000,
      "restartPolicyType": "always"
    }
  }
  